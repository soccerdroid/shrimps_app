<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:id="@+id/connectionpBarContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/connectionpBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desconectado"
            android:gravity="left"
            android:textColor="@color/opaque_orange"/>
        <Button
            android:id="@+id/btnTagImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Etiquetar imágenes"
            android:background="@drawable/rounded_btn"
            android:visibility="visible" />
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Conectarse"
            android:background="@drawable/rounded_btn"
            android:visibility="visible" />
        <Button
            android:id="@+id/btnImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Descargar imágenes"
            android:background="@drawable/rounded_btn"
            android:visibility="visible"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/camera_menu_op"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_btn"
            android:visibility="visible"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btnRestartRasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textAllCaps="false"
                android:background="@drawable/restart_rasp_btn"
                android:text="@string/restart_rasp_btn"
                android:enabled="false"/>
            <Button
                android:id="@+id/btnTurnoffRasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/turnoff_rasp_btn"
                android:text="@string/turnoff_rasp_btn"
                android:enabled="false"/>
        </LinearLayout>

    </LinearLayout>






</LinearLayout>
